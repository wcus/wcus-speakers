{% extends "layouts/splash.twig" %}
{% block content %}
    <div class="opencfp-signup">
        <a class="font-serif text-center mt-8 mb-4 block" href="{{ url('homepage') }}">
            <img class="w-32 mb-2 inline-block" src="{{ assets('img/logo.svg') }}" alt="OpenCFP">
            <h1 class="font-normal m-0">Open<span class="text-brand font-bold">CFP</span></h1>
        </a>

        {% include "_flash.twig" %}

        <form method="post" action="{{ url('user_create') }}">
            <label>Email</label>
            <input type="email" name="email"
                   value="{% if flash.old_email %}{{ flash.old_email | escape }}{% endif %}"
                   placeholder="you@example.com">
            <label class="text-sm">Password</label>
            <input type="password" name="password" placeholder="•••••••">
            <ul class="list-reset">
                <li>
                    <label for="coc">
                        <input id="coc" class="mr-2" name="coc" type="checkbox"> I agree to abide by the <a href="{{ site.coc_link }}" target="_blank" class="text-brand text-bold text-underline" rel="noopener noreferrer">Code of Conduct</a>
                    </label>
                </li>
                <li>
                    <label for="privacy">
                        <input id="privacy" class="mr-2" name="privacy" type="checkbox">
                        I have read and understand the <a href="{{ url('privacy') }}" target="_blank" class="text-brand text-bold text-underline" rel="noopener noreferrer">Privacy Policy</a>
                    </label>
                </li>
            </ul>
            <button type="submit" class="btn btn-brand w-full">Signup</button>
        </form>

        <p class="text-light text-center text-sm my-4">
            Already signed up? <a href="{{ url('login') }}" class="text-brand text-bold">Login now</a>
        </p>
    </div>
{% endblock %}
