{% extends "layouts/splash.twig" %}
{% block content %}
    <div class="opencfp-login">
        <a class="font-serif text-center mt-8 mb-4 block" href="{{ url('homepage') }}">
            <img class="w-32 mb-2 inline-block" src="{{ assets('img/logo.svg') }}" alt="OpenCFP">
            <h1 class="font-normal m-0">Open<span class="text-brand font-bold">CFP</span></h1>
        </a>

        {% include "_flash.twig" %}

        <form id="forgot" class="form-horizontal" action="{{ url('forgot_password_create') }}" method="POST">
            {{ form_widget(form._token) }}

            <label>Email</label>
            {{ form_widget(form.email, {'attr': {'class': '', 'placeholder': 'you@example.com'}}) }}

            <button type="submit" class="btn btn-brand w-full">Reset Password</button>
        </form>
    </div>
{% endblock %}
