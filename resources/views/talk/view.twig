{% extends "layouts/default.twig" %}
{% block content %}
<div class="page-content">
    <h2 class="page-title">{{ talk.title|raw }}</h2>
    <div class="mb-6">
        <span class="bg-brand text-white text-xs rounded-full py-2 px-3 mr-2"><i class="fa fa-clock-o" aria-hidden></i> {{ talkHelper.getTypeDisplayName(talk.type) }}</span>
        <span class="bg-brand text-white text-xs rounded-full py-2 px-3 mr-2"><i class="fa fa-graduation-cap" aria-hidden></i> {{ talkHelper.getCategoryDisplayName(talk.category) }}</span>
        <span class="bg-brand text-white text-xs rounded-full py-2 px-3">{{ talkHelper.getLevelDisplayName(talk.level) }}</span>
    </div>
    <p>{{ talk.description | striptags | markdown }}</p>
    {% if talk.other is not empty %}
        <h3 class="mb-2 mt-4">Other Information</h3>
        <p>{{ talk.other | striptags | markdown }}</p>
    {% endif %}
</div>
{% endblock %}
